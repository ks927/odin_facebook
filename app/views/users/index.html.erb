<div class="row">
    <div class="col-md-8 friend_req">
<h1>Odin Network Users</h1>

<ul>
<% @users.each do |user| %>

<li>
    <%= link_to gravatar_for(user, size: 20), user_path(user) %>
    <%= link_to user.username, user_path(user) %>
    <% unless current_user == user || current_user.all_friends_inc_pending.include?(user) %>
      <%= link_to "Add friend", friendships_path(friend_id: user), method: :post %>
    <% end %>
</li>

<% end %>
</ul>
    </div>
</div>

